{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "totp-app",
  "version": "1.1.0",
  "identifier": "com.ttop.qrewy",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
        {
        "label": "main",
        "title": "totp app",
        "width": 550,
        "height": 850,
        "resizable": false,
        "minWidth": 550,
        "minHeight": 850,
        "maxWidth": 550,
        "maxHeight": 850,
        "decorations": false,
        "dragDropEnabled": true

      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/qrewy/totp-app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEREOUJBNzk4MEJGNDUyQzIKUldUQ1V2UUxtS2ViM2Q2bDVlajJEdDlUQUx0NkFMQkNiMCtGVmtmejhUZEJkMDBqeE1UNGE5RE4K"
    },
     "windows": {
        "installMode": "passive"
      }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
